---
import Main from "../../layouts/main.astro";

const about = (await Astro.glob("./articles/about.md"))[0];

const articles: Array<{
  title: string;
  intro: string;
  link?: string;
}> = [
  {
    title: about.frontmatter.title,
    intro: about.frontmatter.intro,
    link: "/about",
  },
];
---

<Main>
  <h1 class="logo font-riot">Abi Summers</h1>

  <section class="large" id="intro">
    <ul class="no-bullets">
      <li>guide touristique</li>
      <li>ing√©nieur logiciels</li>
      <li>mentor</li>
      <li>slow traveller</li>
    </ul>
  </section>
  {
    articles.map((article) => (
      <article>
        <h2>{article.title}</h2>
        <p>{article.intro}</p>
        {article.link && (
          <a class="cta" href={"/fr/articles" + article.link}>
            lisez plus
          </a>
        )}
      </article>
    ))
  }
</Main>
