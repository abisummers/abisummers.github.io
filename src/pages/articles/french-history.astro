export const fastResponses = [
  "grotte de Lascaux",
  "La liberté",
  "L’égalité",
  "La fraternité",
  "Laïcité",
  "Droits et des devoirs",
  "Démocratie",
  "Les principales institutions de l’État",
  "3 types de collectivités",
  "La commune",
