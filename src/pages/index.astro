---
import Main from "../layouts/main.astro";

const about = (await Astro.glob("./articles/about.md"))[0];

const articles: Array<{
  title: string;
  intro: string;
  link?: string;
}> = [
  {
    title: about.frontmatter.title,
    intro: about.frontmatter.intro,
    link: "/about",
  },
  {
    title: "Guided through Paris",
    intro: "A tour guides tips and tricks to visiting Paris for the first time or a returning visit.",
    link: "/guide",
  },
  {
    title: "The Alphabet of Île-de-France",
    intro:
      "A project to discover some of the less known locations within Île-de-France, one letter at a time.",
    link: "/alphabet-ile-de-france",
  },
  {
    title: "Museums",
    intro:
      "A place to share my thoughts after visiting a museum or exhibition.",
    link: "/museums",
  },
  {
    title: "Travel",
    intro: "A place to talk about all things travel.",
    link: "/travel",
  },
  {
    title: "Articles",
    intro:
      "Find all my articles here, from things to do in Paris, travelling within Île-de-France and travel blogs.",
    link: "/",
  },
  {
    title: "Monthly wrap up",
    intro:
      "A review of each month, including thing I've seen in Paris, places I've visited and exhibitions I've been to.",
    link: "/monthly-review",
  },
];
---

<Main>
  <h1 class="logo font-riot">Abi Summers</h1>

  <section class="large" id="intro">
    <ul class="no-bullets">
      <li>tour guide</li>
      <li>software engineer</li>
      <li>mentor</li>
      <li>slow traveller</li>
    </ul>
  </section>
  {
    articles.map((article) => (
      <article>
        <h2>{article.title}</h2>
        <p>{article.intro}</p>
        {article.link && (
          <a class="cta" href={"/articles" + article.link}>
            read more
          </a>
        )}
      </article>
    ))
  }
</Main>
