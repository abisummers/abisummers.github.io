      }

      .content {
        max-width: 80ch;
      }

      .font-riot {
        font-family: "Protest Riot", sans-serif;
      }

      .text-center {
        text-align: center;
      }

      h1 a {
        text-decoration: none;
      }

      h1 {
        font-size: 2em;
      }

      h1.aside {
        font-size: 2em;
        margin: 0.25em;
      }

      h1.not-aside {
        display: none;
      }

      @media screen and (max-width: 800px) {
        h1.aside {
          font-size: 1.25em;
        }
      }

      @media screen and (max-width: 500px) {
        h1.aside {
          display: none;
        }

        h1.not-aside {
          display: initial;
        }
      }

      .large {
        font-size: 2em;
      }

      footer {
        margin-top: 2em;
      }

      article {
        max-width: 60ch;
      }

      .languages {
        list-style-type: none;
        padding: 0;
        margin: 1em;
      }

      nav a {
        text-decoration: none;
      }

      .no-bullets {
        list-style-type: none;
        padding: 0;
      }

      a {
        color: var(--text);
      }

      .cta {
        text-align: center;
        text-decoration: none;
        background-color: var(--contrast);
        padding: 0.5em 1em;
      }

