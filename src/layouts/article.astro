---
const frPath = Astro.url.pathname.replace(/^\/(en|fr)/, "/fr");
const enPath = Astro.url.pathname.replace(/^\/(fr|en)/, "/en");

const locale = Astro.url.pathname.substring(1, 3);
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="utf-8" />
